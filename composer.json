{
    "name": "awurth/slim-validation",
    "description": "A validator for the Slim PHP Micro-Framework",
    "keywords": ["validation", "validator", "respect", "slim"],
    "homepage": "https://github.com/awurth/SlimValidation",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexis Wurth",
            "email": "awurth.dev@gmail.com",
            "homepage": "https://github.com/awurth"
        }
    ],
    "autoload": {
        "psr-4": {
            "Awurth\\SlimValidation\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Awurth\\SlimValidation\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=7.3",
        "psr/http-message": "^1.0",
        "respect/validation": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=7.0",
        "slim/psr7": "^1.5",
        "slim/slim": "^4.0",
        "slim/twig-view": "^3.0"
    },
    "scripts": {
        "test": [
            "@phpunit"
        ],
        "phpunit": "phpunit --testdox"
    },
    "config": {
        "sort-packages": true
    },
    "suggest": {
        "twig/twig": "Needed to be able to use the Twig Extension",
        "slim/twig-view": "Needed to be able to use the Twig Extension with Slim"
    }
}
