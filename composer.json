{
    "name": "awurth/slim-validation",
    "description": "A wrapper around the respect/validation PHP validation library for easier error handling and display",
    "keywords": ["validation", "validator", "validate", "respect", "slim"],
    "homepage": "https://github.com/awurth/SlimValidation",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexis Wurth",
            "email": "awurth.dev@gmail.com",
            "homepage": "https://github.com/awurth"
        }
    ],
    "autoload": {
        "psr-4": {
            "Awurth\\Validator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Awurth\\Validator\\Tests\\": "tests"
        }
    },
    "require": {
        "php": ">=8.1",
        "respect/validation": "^2.0",
        "symfony/options-resolver": "^6.0 || ^7.0",
        "symfony/property-access": "^6.0 || ^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.41",
        "phpunit/phpunit": "^10.5",
        "psr/http-message": "^1.0 || ^2.0",
        "slim/psr7": "^1.6",
        "twig/twig": "^3.8"
    },
    "config": {
        "sort-packages": true
    }
}
